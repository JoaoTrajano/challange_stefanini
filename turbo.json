{
  "$schema": "https://turborepo.com/schema.json",
  "references": [
    {
      "path": "packages/validations"
    },
    {
      "path": "apps/web"
    },
    {
      "path": "apps/api"
    }
  ],
  "globalEnv": [
    "DATABASE_URL"
  ],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**",
        "build/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}