        "outDir": "dist/cjs",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "index.ts",
        "form/**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}