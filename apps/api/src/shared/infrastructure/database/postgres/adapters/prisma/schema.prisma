generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id() @default(uuid())
  name      String
  email     String   @unique()
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Person {
  id          String   @id() @default(uuid())
  name        String
  gender      String?
  email       String?
  birthDate   DateTime
  birthplace  String?
  nationality String?
  document    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("persons")
}
